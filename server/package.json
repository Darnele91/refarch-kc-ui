{
  "name": "kcbff",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm-cloud-architecture/refarch-kc-ui.git"
  },
  "engines": {
    "node": "6.x",
    "npm": "5.x"
  },
  "author": "Jerome Boyer - IBM - Cloud Architecture Solution Engineering",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf dist",
    "start": "node dist/server/server.js",
    "copy-deps": "cpx \"../ui/dist/ui/**/*.*\" ./dist/server/static && cpx \"./config/config.json\" ./dist/server/config",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"nodemon --watch ./dist/server ./dist/server/server.js\"",
    "lint": "tslint \"src/**/*.ts\"",
    "prebuild": "npm install",
    "test": "mocha --require ts-node/register  test/**/*.ts",
    "build": "npm run  clean && npm run copy-deps && tsc",
    "build.w": "npm run copy-deps &&  tsc -w"
  },
  "private": true,
  "dependencies": {
    "@types/node": "^10.12.17",
    "@types/request-promise-native": "^1.0.15",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "kafka-node": "^3.0.1",
    "node-rdkafka": "^2.5.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.5",
    "rxjs": "^6.3.3",
    "socket.io": "^2.2.0",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16",
    "@types/mocha": "^5.2.5",
    "@types/kafka-node": "^2.0.7",
    "@types/socket.io": "^2.1.2",
    "@types/ws": "^4.0.0",
    "jasmine": "^3.3.1",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "concurrently": "^3.5.1",
    "copy-newer": "^2.1.2",
    "nodemon": "^1.18.9",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}

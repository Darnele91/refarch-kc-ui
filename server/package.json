{
  "name": "kcbff",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm-cloud-architecture/refarch-kc-ui.git"
  },
  "engines": {
    "node": "6.x",
    "npm": "5.x"
  },
  "author": "Jerome Boyer - IBM - Cloud Architecture Solution Engineering",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf dist",
    "start": "node dist/server/server.js",
    "copy-deps": "copy-newer --cwd node_modules ** ./dist/node_modules && cpx \"../ui/dist/ui/*.*\" ./dist/server/static && cpx \"./config/*.*\" ./dist/server/config",
    "preserve": "npm run build",
    "s": "npm run serve",
    "serve": "concurrently \"npm run build.w\" \"nodemon --watch ./dist/server ./dist/server/server.js\"",
    "lint": "tslint \"src/**/*.ts\"",
    "prebuild": "npm install",
    "build": "npm run copy-deps && tsc",
    "build.w": "npm run copy-deps &&  tsc -w"
  },
  "private": true,
  "dependencies": {
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "hystrixjs": "^0.2.0",
    "kafka-node": "^3.0.1",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16",
    "@types/ws": "^4.0.0",
    "concurrently": "^3.5.1",
    "copy-newer": "^2.1.2",
    "nodemon": "^1.14.11",
    "rimraf": "^2.6.2",
    "typescript": "^2.7.2"
  }
}
